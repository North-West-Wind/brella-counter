{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build-vite": "cd vite && npm run build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "react": "npm:react"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
